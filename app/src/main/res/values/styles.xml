<resources>

    <style name="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TopView">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TopView.Title" parent="@style/TopView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/button_backward_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TopView.Button" parent="@style/TopView">
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/button_backward_selector</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="pop_chart">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_orange_style</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/pop_bg_color</item>
    </style>

    <style name="et_normal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:dropDownHeight">100dp</item>
        <item name="android:textColor">@color/color_text_c7</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@mipmap/icon_big_close</item>
        <item name="android:drawableEnd">@mipmap/icon_big_close</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">密码</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawableRight">@mipmap/password_hide</item>
        <item name="android:drawableEnd">@mipmap/password_hide</item>
    </style>

    <style name="tab_menu_style">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/nav_tab_text</item>
    </style>

    <style name="me_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="me_ll_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_ll_state</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="image_more">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@mipmap/main_top_arrow</item>
    </style>

    <style name="info_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_c6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ll_detail_style">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/bg_ll_state</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_detail_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/color_text_c7</item>
    </style>

    <style name="btn_top_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="text_line_chart_list_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_c7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_line_chart_list_item" parent="text_line_chart_list_header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_show_label">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/actionbar_text_default</item>
    </style>

    <style name="btn_normal_style">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">40.0dip</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="label_login_small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_c10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/common_width_w20</item>
        <item name="android:paddingBottom">@dimen/common_width_w20</item>
    </style>

    <!-- 分享对话框样式 start -->
    <style name="dialog_content_share_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="list_cell_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_cell_text_dialog" parent="@style/list_cell_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/ui_dialog_list_text</item>
    </style>

    <style name="list_cell_divider">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#cccccc</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="dialog_content_share_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@drawable/share_icon_qq_selector</item>
        <item name="android:drawablePadding">4dip</item>
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dip</item>
    </style>

    <style name="dialog_common" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="section_item_divider">
        <item name="android:background">@color/ui_dialog_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="dialog_button">
        <item name="android:textSize">@dimen/text_regular_primary_size</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/touch_clear_bg</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">46.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="section_item_divider_vertical">
        <item name="android:background">@color/ui_dialog_divider</item>
        <item name="android:layout_width">0.1px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="wrap_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_base" parent="@style/wrap_view">
        <item name="android:textSize">@dimen/text_regular_primary_size</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_multiline" parent="@style/text_base">
        <item name="android:maxLines">5</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="dialog_pinterest_text" parent="@style/text_multiline">
        <item name="android:textSize">@dimen/text_regular_primary_size</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="fullline_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_title" parent="@style/fullline_view">
        <item name="android:textSize">@dimen/text_large_primary_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="dialog_bottom" parent="@style/dialog_common">
        <item name="android:windowBackground">@drawable/dialog_bottom_background</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>

    <style name="dialog_subtitle" parent="@style/fullline_view">
        <item name="android:textSize">@dimen/text_large_secondary_size</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="dialog_divider">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- 分享对话框样式 end -->

</resources>
